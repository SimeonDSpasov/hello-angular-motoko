{
  "name": "hello-angular-motoko",
  "version": "0.0.2",
  "author": {
    "name": "Shawn Dotey",
    "email": "insight431@protonmail.com",
    "url": "https://forum.dfinity.org/u/infinityio.tech"
  },
  "description": "An example of implementing the Internet Computer's motoko project along side Angular",
  "keywords": [
    "Internet Computer",
    "Motoko",
    "TypeScript",
    "Angular",
    "Canister"
  ],
  "scripts": {
    "build": "ng build",
    "prebuild": "",
    "prestart": "",
    "copy:types": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --exclude='*.most' --delete src/declarations",
    "ng-start": "npm run ng-start-dfx && dfx canister create hello && npm run ng-serve && npm run print-ng",
    "ng-serve": "concurrently -k \"npm run ng-watch-motoko\" \"ng serve\"",
    "ng-start-dfx": "dfx stop && dfx start --background",
    "ng-build-hello": "dfx deploy hello && npm run resolve:dfx",
    "ng-watch-motoko": "nodemon --watch src --ext mo -x \"npm run ng-build-hello\"",
    "build-dfx-www": "npm run ng-start-dfx && dfx deploy && npm run print-dfx-www",
    "print-dfx-www": "echo local IC server: http://localhost:8000/?canisterId=$(dfx canister id www)",
    "print-ng": "echo local Angular server: http://localhost:4200",
    "init:dfx": "npm run restart:clean:dfx && npm run create:dfx && npm run generate:dfx && npm run resolve:dfx && npm run build:dev",
    "deploy:dfx": "npm run build:prod && dfx deploy --network ic --no-wallet",
    "restart:dfx": "dfx stop && dfx start --background",
    "restart:clean:dfx": "dfx stop && dfx start --background --clean",
    "create:dfx": "dfx canister create --all",
    "generate:dfx": "dfx generate",
    "resolve:dfx": "find src/declarations -type f -name '**.ts' -delete",
    "build:prod": "export NODE_ENV=production && ng build --configuration production",
    "build:dev": "export NODE_ENV=development && ng build --configuration development"
  },
  "private": true,
  "dependencies": {
    "@angular-builders/custom-webpack": "^14.0.0",
    "@angular/animations": "~14.0.0",
    "@angular/common": "~14.0.0",
    "@angular/compiler": "~14.0.0",
    "@angular/core": "~14.0.0",
    "@angular/forms": "~14.0.0",
    "@angular/platform-browser": "~14.0.0",
    "@angular/platform-browser-dynamic": "~14.0.0",
    "@angular/router": "~14.0.0",
    "rxjs": "~7.5.5",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~14.0.0",
    "@angular/cli": "~14.0.0",
    "@angular/compiler-cli": "^14.0.0",
    "@dfinity/agent": "0.11.3",
    "@dfinity/candid": "0.11.3",
    "@dfinity/principal": "0.11.3",
    "@types/jasmine": "~4.0.0",
    "jasmine-core": "~4.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.7.2",
    "@types/node": "^12.11.1",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^9.0.1",
    "ng-packagr": "^12.1.0",
    "nodemon": "^2.0.12",
    "assert": "2.0.0",
    "buffer": "6.0.3",
    "events": "3.3.0",
    "html-webpack-plugin": "5.5.0",
    "process": "0.11.10",
    "stream-browserify": "3.0.0",
    "terser-webpack-plugin": "5.2.5",
    "util": "0.12.4",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
