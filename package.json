{
  "name": "hello-angular-motoko",
  "version": "0.0.3",
  "author": {
    "name": "Shawn Dotey",
    "email": "insight431@protonmail.com",
    "url": "https://forum.dfinity.org/u/infinityio.tech"
  },
  "description": "An example of a Motoko project with an Angular 14 frontend",
  "keywords": [
    "Internet Computer",
    "Motoko",
    "TypeScript",
    "Angular",
    "Canister"
  ],
  "scripts": {
    "build": "",
    "prebuild": "",
    "prestart": "",
    "init:dfx": "npm run restart:clean:dfx && npm run refresh:motoko && dfx stop",
    "start": "npm run restart:dfx && npm run refresh:motoko && npm run serve:both && npm run print:ng",
    "test": "npm run restart:dfx && ng test",
    "deploy:dfx": "npm run restart:dfx && npm run build:prod && dfx deploy --network ic --no-wallet",
    "serve:both": "concurrently -k \"npm run watch:motoko\" \"ng serve && dfx stop\"",
    "watch:motoko": "nodemon --watch src --ext mo -x \"npm run refresh:motoko\"",
    "print:dfx:www": "echo local IC server: http://127.0.0.1:8000/?canisterId=$(dfx canister id www)",
    "print:dfx:motoko": "echo local IC server: http://127.0.0.1:8000/?canisterId=$(dfx canister id motoko)",
    "generate:motoko": "dfx generate motoko",
    "restart:dfx": "dfx stop && dfx start --background",
    "restart:clean:dfx": "dfx stop && dfx start --background --clean",
    "refresh:motoko": "dfx deploy motoko && npm run copy:dfx",
    "copy:dfx": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --exclude='*.most' --exclude='*.ts' --delete src/declarations",
    "build:prod": "export NODE_ENV=production && ng build --configuration production",
    "build:dev": "export NODE_ENV=development && ng build --configuration development"
  },
  "private": true,
  "dependencies": {
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@ipi-soft/ng-components": "^1.19.16",
    "@tailwindcss/forms": "^0.5.4",
    "angular-svg-icon": "^17.0.0",
    "ngx-countdown": "^17.1.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.14.2",
    "typescript": "^5.2.2",
    "@angular-builders/custom-webpack": "17.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/jasmine": "~4.3.0",
    "autoprefixer": "^10.4.14",
    "daisyui": "^3.3.1",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.26",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "@dfinity/agent": "0.11.3",
    "@dfinity/candid": "0.11.3",
    "@dfinity/principal": "0.11.3",
    "@types/node": "^12.11.1",
    "assert": "2.0.0",
    "buffer": "6.0.3",
