{
  "name": "hello-angular-motoko",
  "version": "0.0.2",
  "author": {
    "name": "Shawn Dotey",
    "email": "insight431@protonmail.com",
    "url": "https://forum.dfinity.org/u/infinityio.tech"
  },
  "description": "An example of implementing the Internet Computer's motoko project along side Angular",
  "keywords": [
    "Internet Computer",
    "Motoko",
    "TypeScript",
    "Angular",
    "Canister"
  ],
  "scripts": {
    "build": "",
    "prebuild": "",
    "prestart": "",
    "init:dfx": "npm run restart:clean:dfx && npm run refresh:motoko && dfx stop",
    "start": "npm run restart:dfx && npm run refresh:motoko && npm run serve:both && npm run print:ng",
    "serve:both": "concurrently -k \"npm run watch:motoko\" \"ng serve && dfx stop\"",
    "deploy:dfx": "npm run build:prod && dfx deploy --network ic --no-wallet",
    "watch:motoko": "nodemon --watch src --ext mo -x \"npm run refresh:motoko\"",
    "print:dfx:www": "echo local IC server: http://127.0.0.1:8000/?canisterId=$(dfx canister id www)",
    "print:dfx:motoko": "echo local IC server: http://127.0.0.1:8000/?canisterId=$(dfx canister id motoko)",
    "generate:motoko": "dfx generate motoko",
    "restart:dfx": "dfx stop && dfx start --background",
    "restart:clean:dfx": "dfx stop && dfx start --background --clean",
    "refresh:motoko": "dfx deploy motoko && npm run copy:dfx",
    "copy:dfx": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --exclude='*.most' --exclude='*.ts' --delete src/declarations",
    "build:prod": "export NODE_ENV=production && ng build --configuration production",
    "build:dev": "export NODE_ENV=development && ng build --configuration development"
  },
  "private": true,
  "dependencies": {
    "@angular-builders/custom-webpack": "^14.0.0",
    "@angular/animations": "~14.0.0",
    "@angular/common": "~14.0.0",
    "@angular/compiler": "~14.0.0",
    "@angular/core": "~14.0.0",
    "@angular/forms": "~14.0.0",
    "@angular/platform-browser": "~14.0.0",
    "@angular/platform-browser-dynamic": "~14.0.0",
    "@angular/router": "~14.0.0",
    "rxjs": "~7.5.5",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~14.0.0",
    "@angular/cli": "~14.0.0",
    "@angular/compiler-cli": "^14.0.0",
    "@dfinity/agent": "0.11.3",
    "@dfinity/candid": "0.11.3",
    "@dfinity/principal": "0.11.3",
    "@types/jasmine": "~4.0.0",
    "jasmine-core": "~4.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.7.2",
    "@types/node": "^12.11.1",
    "concurrently": "^6.2.0",
    "copy-webpack-plugin": "^9.0.1",
    "ng-packagr": "^12.1.0",
    "nodemon": "^2.0.12",
    "assert": "2.0.0",
    "buffer": "6.0.3",
    "events": "3.3.0",
    "html-webpack-plugin": "5.5.0",
    "process": "0.11.10",
    "stream-browserify": "3.0.0",
    "terser-webpack-plugin": "5.2.5",
    "util": "0.12.4",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
